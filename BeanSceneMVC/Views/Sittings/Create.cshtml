@model BeanSceneMVC.ViewModels.SittingViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Sitting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sitting.Date" class="control-label"></label>
                <input asp-for="Sitting.Date" class="form-control" />
                <span asp-validation-for="Sitting.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sitting.SittingTypeId" class="control-label"></label>
                <select asp-for="Sitting.SittingTypeId" class ="form-control" asp-items="Model.SittingTypeList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Sitting.StartTimeId" class="control-label"></label>
                <select asp-for="Sitting.StartTimeId" class ="form-control" asp-items="Model.TimeslotList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Sitting.EndTimeId" class="control-label"></label>
                <select asp-for="Sitting.EndTimeId" class ="form-control" asp-items="Model.TimeslotList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Sitting.Status" class="control-label"></label>
                <select asp-for="Sitting.Status" class="form-control" asp-items="Html.GetEnumSelectList<Sitting.StatusEnum>()"></select>
                <span asp-validation-for="Sitting.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sitting.Capacity" class="control-label"></label>
                <input asp-for="Sitting.Capacity" class="form-control" />
                <span asp-validation-for="Sitting.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
