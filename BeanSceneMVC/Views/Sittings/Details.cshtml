@model BeanSceneMVC.Models.Sitting

@{
    ViewData["Title"] = "Sitting details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>     
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SittingType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SittingType.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTime.Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndTime.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
   @* @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>*@
    <a class="btn btn-primary" asp-action="Edit" asp-route-sittingTypeId="@Model.SittingTypeId" asp-route-dateString="@Model.Date.ToString("yyyy-MM-dd")">Edit</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-sittingTypeId="@Model.SittingTypeId" asp-route-dateString="@Model.Date.ToString("yyyy-MM-dd")">Delete</a>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</div>
