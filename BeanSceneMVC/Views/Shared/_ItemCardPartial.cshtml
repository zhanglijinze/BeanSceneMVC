@model BeanSceneMVC.Models.MenuItem

<article class="menu-card card p-0 col-6 col-md-4 col-lg-3">

    <header >
        <div class="menu-card__image-container">
            <partial name="_ItemImagePartial" model="Model" />
        </div>
      @*  <h2 class="menu-card__title">@Model.Name</h2>*@
    </header>
    <section class="card-body">
        <div class="menu-card__description">
            @Html.DisplayFor(b => Model.Description)
        </div>
        <div class="menu-card__more-info">
            <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Id">More info</a>
        </div>
    </section>
    <footer class="card-footer">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Category:</strong> @Model.MenuCategory.Name</p>
    </footer>
</article>