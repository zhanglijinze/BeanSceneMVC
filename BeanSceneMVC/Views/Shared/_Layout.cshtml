<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeanScene Cuisine</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeanSceneMVC.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/logo/images/favicon/favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css"/>
    @*Include css &Aacute; JS resources for Dropzone*@
    
    <link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />
    

    @await RenderSectionAsync("Styles", required: false)

   
   
</head>
<body class="hero">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bean-light-blue">
            <div class="container-fluid">
                <a class="navbar-brand bean-dark-blue-text" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo/images/symbol/png/symbol-primary-transparent.png" width=auto height="50" alt="BeanScene Cuisine logo">
                    BeanScene Cuisine</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <partial name="_MainNavPartial"/>
                    <partial name="_LoginPartial"></partial>
                    <button class="toggle" onclick="toggleLightMode()"></button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BeanScene Cuisine - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
 
    <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
